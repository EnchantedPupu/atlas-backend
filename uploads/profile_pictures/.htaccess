# Allow only image files
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Deny access to other file types
<FilesMatch "^.*$">
    Order deny,allow
    Deny from all
</FilesMatch>

<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Prevent execution of PHP files
<Files *.php>
    deny from all
</Files>
